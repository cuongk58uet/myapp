doctype html
html
	head
		title Login
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/signin.css')
	body
		.container
			form.form-signin
				h2.form-signin-heading Signup
				input.form-control#inputUsername(type='text', placeholder='Email')
				input.form-control#inputPassword(type='password', placeholder='Password')
				input.form-control#inputName(type='text', placeholder='Display Name')
				a.btn.btn-lg.btn-primary.btn-block(href='/login') Sign Up