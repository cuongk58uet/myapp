doctype html
html
	head
		title Login
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/signin.css')
		meta(name="viewport", content="width=device-width, initial-scale=1")
	body
		.container
			.form-signin
				include ../message.jade
			form.form-signin(role="form", method="post", action="/login")
				h2.form-signin-heading Signin
				input.form-control#inputUsername(type='text', placeholder='Username', name="username")
				input.form-control#inputPassword(type='password', placeholder='Password', name="password")
				button.btn.btn-lg.btn-primary.btn-block(type="submit") Log In
				</br>
				a.btn.btn-success.btn-md(href='/signup') Sign Up
				&nbsp;
				a(href="/posts") Home
		script(src='/javascripts/jquery.js')
		script(src='/javascripts/bootstrap.js')
		script(src='/javascripts/mystyle.js')
